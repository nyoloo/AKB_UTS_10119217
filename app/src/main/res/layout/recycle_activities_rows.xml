<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="8dp"
    android:layout_marginTop="5dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/black"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/puerwhite">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Media -->
        <ImageView
            android:id="@+id/activity_recycle_image"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_undraw_moonlight__5_ksn"
            android:scaleType="centerCrop"
            android:contentDescription="@string/common_google_play_services_enable_button"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/daily_linear">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/activity_recycle_activityname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Comingsoon"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />

        </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</com.google.android.material.card.MaterialCardView>